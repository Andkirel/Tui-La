<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/main_bg"
    tools:context=".LogInFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_file_for_entry">

            <ImageButton
                android:id="@+id/Backbutton_Badges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:background="#00FFFFFF"
                android:contentDescription="@string/backb"
                app:srcCompat="@drawable/back_button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stickers"
                android:id="@+id/text_badges"
                android:layout_marginTop="15dp"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/philosopher"/>

            <Button
                android:id="@+id/Button_badges_Journal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Journal stickers"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_pink"/>
            <Button
                android:id="@+id/Button_badges_BreathingExercise"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Breathing Exercise stickers"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_pink"/>
            <Button
                android:id="@+id/Button_badges_GuidedMeditation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Guided Meditation stickers"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_pink"/>
            <Button
                android:id="@+id/Button_badges_Membership"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Membership stickers"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_pink"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>