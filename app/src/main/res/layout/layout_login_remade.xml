<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/main_bg"
    tools:context=".LogInFragment">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_file_for_entry">

            <ImageButton
                android:id="@+id/Backbutton_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#00FFFFFF"
                android:contentDescription="@string/backb"
                app:srcCompat="@drawable/back_button" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/Logintext"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/philosopher"/>
            <EditText
                android:id="@+id/usname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tl_rounded_textbox_pink"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="@string/login_email"
                android:drawableLeft="@drawable/baseline_person_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                android:fontFamily="@font/philosopher"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tl_rounded_textbox_pink"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="@string/login_password"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                android:fontFamily="@font/philosopher"/>

            <TextView
                android:id="@+id/forpw"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:clickable="true"
                android:textStyle="bold"
                android:focusable="auto"
                android:focusableInTouchMode="true"
                android:textSize="14sp"
                android:fontFamily="@font/philosopher"
                android:text="@string/login_forgot_email_password"
                android:textAlignment="center"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="-25dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="@string/login_remember_me"
                android:textAlignment="center"
                android:textColor="#000000" />

            <Button
                android:id="@+id/Button_login_loginButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Login"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/tl_rounded_textbox_pink"/>




        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>