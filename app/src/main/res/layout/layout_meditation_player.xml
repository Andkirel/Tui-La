<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/guidedMeditationTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/philosopher"
        android:background="@android:color/transparent"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FFB3C1"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_gm_player_back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_gm_player_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/back_button"
        android:backgroundTint="@color/white"
        android:contentDescription=""
        app:layout_constraintEnd_toStartOf="@id/guidedMeditationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.media3.ui.PlayerView
        android:id="@+id/gm_player_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidedMeditationTitle">

    </androidx.media3.ui.PlayerView>

    <androidx.media3.ui.PlayerView
        android:id="@+id/gm_player_audio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.media3.ui.PlayerView>

</androidx.constraintlayout.widget.ConstraintLayout>