<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/main_bg"
    tools:context=".LogInFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_file_for_entry">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your new Password"
                android:id="@+id/confirm_Email"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/philosopher"/>

            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tl_rounded_textbox_pink"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="New password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                android:fontFamily="@font/philosopher"
                app:passwordToggleEnabled="true"/>
            <EditText
                android:id="@+id/confirm_newpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tl_rounded_textbox_pink"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                android:fontFamily="@font/philosopher"
                app:passwordToggleEnabled="true"/>
            <Button
                android:id="@+id/Button_PWreset_SendEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Change Password"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_pink"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>