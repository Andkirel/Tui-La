<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <TextView
        android:id="@+id/Text_stressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_stressed"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/Text_afraid"
        app:layout_constraintTop_toBottomOf="@+id/Button_Emotions_stressed" />

    <TextView
        android:id="@+id/Text_sad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_sad"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/Text_stressed"
        app:layout_constraintTop_toBottomOf="@+id/Button_Emotions_sad" />

    <ImageButton
        android:id="@+id/Button_Emotions_stressed"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/emoji_love_image"
        app:layout_constraintStart_toEndOf="@+id/Button_Emotions_afraid"
        app:layout_constraintTop_toBottomOf="@+id/Text_excited"
        app:srcCompat="@drawable/stressed"
         />

    <ImageButton
        android:id="@+id/Button_Emotions_afraid"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/emoji_relaxed_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_happy"
        app:srcCompat="@drawable/afraid" />

    <ImageButton
        android:id="@+id/Button_Emotions_Loved"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/emoji_stressed_image"
        app:layout_constraintStart_toEndOf="@+id/Button_Emotions_angry"
        app:layout_constraintTop_toBottomOf="@+id/Text_sad"
        app:srcCompat="@drawable/loved" />

    <ImageButton
        android:id="@+id/Button_Emotions_relaxed"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/emoji_afraid_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_afraid"
        app:srcCompat="@drawable/relaxed" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="380dp"
        android:layout_height="62dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/nickainley"
        android:text="@string/emoji_how_are_you_feeling"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Button_Emotions_angry"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/emoji_angry_image"
        app:layout_constraintStart_toEndOf="@+id/Button_Emotions_relaxed"
        app:layout_constraintTop_toBottomOf="@+id/Text_stressed"
        app:srcCompat="@drawable/angry" />

    <ImageButton
        android:id="@+id/Button_Emotions_tired"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/emoji_tired_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toEndOf="@+id/Button_Emotions_excited"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/sleepy" />

    <ImageButton
        android:id="@+id/Button_Emotions_excited"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/emoji_excited_image"
        app:layout_constraintStart_toEndOf="@+id/Button_Emotions_happy"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/excited" />

    <ImageButton
        android:id="@+id/Button_Emotions_happy"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/emoji_happy_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/happy" />

    <ImageButton
        android:id="@+id/Button_Emotions_sad"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/emoji_sad_image"
        app:layout_constraintStart_toEndOf="@+id/Button_Emotions_stressed"
        app:layout_constraintTop_toBottomOf="@+id/Text_tired"
        app:srcCompat="@drawable/sad" />

    <TextView
        android:id="@+id/Text_happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_happy"
        android:textColor="#050505"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Emotions_happy" />

    <TextView
        android:id="@+id/Text_excited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_excited"
        android:textColor="#070707"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/Text_happy"
        app:layout_constraintTop_toBottomOf="@+id/Button_Emotions_excited" />

    <TextView
        android:id="@+id/Text_tired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_tired"
        android:textColor="#040404"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Emotions_tired" />

    <TextView
        android:id="@+id/Text_afraid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_afraid"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Emotions_afraid" />

    <TextView
        android:id="@+id/Stressed_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_loved"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/Text_angry"
        app:layout_constraintTop_toBottomOf="@+id/Button_Emotions_Loved" />

    <TextView
        android:id="@+id/Text_angry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_angry"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/Text_relaxed"
        app:layout_constraintTop_toBottomOf="@+id/Button_Emotions_angry" />

    <TextView
        android:id="@+id/Text_relaxed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_relaxed"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Emotions_relaxed" />

    <Button
        android:id="@+id/Button_Emotions_MM"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/tl_rounded_textbox_pink"
        android:fontFamily="@font/philosopher"
        android:text="@string/emoji_main_menu"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>