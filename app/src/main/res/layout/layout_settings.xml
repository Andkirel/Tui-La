<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/main_bg"
    tools:context=".BadgesFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_file_for_entry">

            <ImageButton
                android:id="@+id/Backbutton_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:background="#00FFFFFF"
                android:contentDescription="@string/backb"
                app:srcCompat="@drawable/back_button" />


            <Button
                android:id="@+id/button_AccontSettings"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Account Settings"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_pink"/>
            <Button
                android:id="@+id/button_stickers"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Stickers"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_pink"/>
            <Button
                android:id="@+id/button_Appsettings"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="App Settings"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_pink"/>
            <Button
                android:id="@+id/button_apphelp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="App help"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_pink"/>
            <Button
                android:id="@+id/Button_Logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Logout"
                android:textSize="18sp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/philosopher"
                android:textStyle="bold"
                android:background="@drawable/tl_rounded_textbox_green"/>


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:contentDescription="@string/backb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>