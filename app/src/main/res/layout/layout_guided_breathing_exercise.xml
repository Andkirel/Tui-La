<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="89dp"
        app:constraint_referenced_ids="breathing_timer_progress,breathing_timer_clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breathing_prompt" />

    <Button
        android:id="@+id/button_breathing_start_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="153dp"
        android:layout_marginTop="60dp"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/breathing_timer_progress" />

    <TextView
        android:id="@+id/breathing_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="165dp"
        android:fontFamily="@font/philosopher"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/breathing_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:contentDescription=""
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    <ProgressBar
        android:id="@+id/breathing_timer_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="216dp"
        android:layout_height="188dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="89dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breathing_prompt" />

    <TextClock
        android:id="@+id/breathing_timer_clock"
        android:layout_width="103dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="@id/breathing_timer_progress"
        app:layout_constraintEnd_toEndOf="@id/breathing_timer_progress"
        app:layout_constraintTop_toTopOf="@id/breathing_timer_progress"
        app:layout_constraintBottom_toBottomOf="@id/breathing_timer_progress"
        />

    <androidx.constraintlayout.helper.widget.Layer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="breathing_inflatable_logo,breathing_circle_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_breathing_start_stop"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="485dp" />

    <ImageButton
        android:id="@+id/breathing_inflatable_logo"
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription=""
        android:focusable="true"
        android:longClickable="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_breathing_start_stop"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/breathing_circle_outline"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="97dp"
        android:contentDescription=""
        android:src="@drawable/circle_outline_thin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_breathing_start_stop" />
</androidx.constraintlayout.widget.ConstraintLayout>